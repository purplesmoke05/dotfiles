    font pango: Inconsolata for Powerline 9
    position top
    tray_output none
    status_command ~/.local/bin/bumblebee-status -m publicip ping nic spacer \
        cpu memory spacer date time spacer pasink pasource docker_ps arandr xrandr bluetooth2 dunst \
        -p root.path=/ time.format="%H:%M CW %V" date.format="%Y年%m月%d日(%a)" nic.format="{intf} {state} {ip} {strength}" traffic.exclude=lo,virbr,docker,vboxnet,veth,br,tailscale spacer.text="   " publicip.format="{ip}" \
        -t night-powerline --iconset awesome-fonts
}

